<Window x:Class="MidiApp.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MidiApp"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="800" Activated="Window_Activated" MouseMove="Window_MouseMove">
    <Grid>
        <Canvas Margin="0">
            <Rectangle x:Name="vertLine" Stroke="Black" Width="1" Canvas.Left="100" Canvas.Top="0" MinWidth="1" MinHeight="15" VerticalAlignment="Bottom" Height="100" StrokeThickness="1 "/>
            <Rectangle x:Name="horizLine" Stroke="Black" Width="100" Canvas.Left="0" Canvas.Top="100" MinWidth="15" MinHeight="1" VerticalAlignment="Bottom" Height="1" StrokeThickness="1 "/>
        </Canvas>

    </Grid>
</Window>
